{
  "manifest_version": 2,

  "name": "Opportunity Detail Extension",
  "description": "This extension show the opportunity details",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action" : {
    "default_icon" : "images/icon-19.png",
    "default_title" : "Gravitas Opportunity!",
    "default_popup": "search.html"
  },
  "content_scripts": [ {
    "matches": ["https://*.salesforce.com/*"],
      "js": ["util.js"]
    }
  ],
  "permissions" : [
    "declarativeContent", "tabs"
  ],
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
